@model Manager.Models.AgentDetail

@{
    ViewBag.Title = "AgentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .pull-right {
        float: right
    }
</style>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <div class="container-fluid">

            <section class="content content-wrapper clearfix">
                <div class="row">

                    <div style="width:100%" class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Company Profile</h3>
                        </div>
                        <form action="=@Url.Action("SaveAgent","Agent")" method="post" >
                            <div class="box-body">
                                <div class="col-md-6" style="float:left">
                                    <div class="">
                                        Company Details
                                        <div class="">
                                            <div class="form-group ">
                                                <label for="company_name" class="col-sm-4 control-label">Company Name *</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="company_name" name="company_name" type="text">
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <label for="phone_number" class="col-sm-4 control-label">Phone Number *</label>
                                                <div class="col-sm-8 pull-right">
                                                    <div class="input-group">
                                                        <input class="form-control phone-input" id="phone_number" name="phone_number" type="text">
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="form-group ">
                                                <label for="email" class="col-sm-4 control-label">Email *</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="email" name="email" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="abn" class="col-sm-4 control-label">Agent Comission *</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" name="AgentComission" type="text">
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <label for="website" class="col-sm-4 control-label">Website</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="website" name="website" type="text" value="">
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <label for="invoice_to_name" class="col-sm-4 control-label">Invoice To</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="invoice_to_name" name="invoice_to_name" type="text" value="">
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="invoice_to_name" class="col-sm-4 control-label">Branch</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="invoice_to_name" name="invoice_to_name" type="text" value="">
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 pull-right">

                                    <div class="">
                                        Address Details
                                        <!-- /.box-header -->
                                        <div class="">
                                            <div class="form-group ">
                                                <label for="street" class="col-sm-4 control-label">Street</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="street" name="street" type="text" value="">
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="suburb" class="col-sm-4 control-label">Suburb</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="suburb" name="suburb" type="text" value="">
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="state" class="col-sm-4 control-label">State</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="state" name="state" type="text" value="">
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="postcode" class="col-sm-4 control-label">Postcode</label>
                                                <div class="col-sm-8 pull-right">
                                                    <input class="form-control" id="postcode" name="postcode" type="text" value="">
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <label for="country_id" class="col-sm-4 control-label">Country</label>
                                                <div class="col-sm-8 pull-right">
                                                    <select class="form-control" id="country_id" name="country_id"><option></option></select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="logo" class="col-sm-4 control-label"></label>
                                                <div class="col-sm-8 pull-right">


                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="logo" class="col-sm-4 control-label"></label>
                                                <div class="col-sm-8 pull-right">


                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.box -->
                                    </div>

                                    <!--/.col (right) -->
                                </div>
                                <br style="clear:both;" />
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Agent Description</label>
                                        <div class="col-sm-10 pull-right">
                                            <textarea class="form-control" name="description" cols="50" rows="10" id="description"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <br style="clear:both;" />
                                <div class="box-footer clearfix">
                                    <input type="submit" class="btn btn-primary " value="Update" />
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </section>
        </div>
    </div>
</body>
